<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical" >

    <com.bslee.logtoolapk.widget.CommonHeader
        android:id="@+id/commonHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bugheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px26"
        android:textColor="@color/font_normal_color333333"
        android:textSize="@dimen/sp28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@color/line_color" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@color/white"
        android:fadingEdge="none"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/buginfoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px26"
            android:textColor="@color/font_gray_color666666"
            android:textSize="@dimen/sp28" />
    </ScrollView>

</LinearLayout>